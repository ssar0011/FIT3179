{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
      "url": "https://raw.githubusercontent.com/ssar0011/FIT3179/main/heat_map/fire.csv"
  },
  "title": "Heat Map of Brightness of Fires",
  "config": {
      "view": {
          "strokeWidth": 0,
          "step": 13
      },
      "axis": {
          "domain": false
      }
  },
  "mark": "rect",
  "encoding": {
      "x": {
          "field": "day",
          "type":"ordinal",
          "title": "Day",
          "sort": [],
          "axis": {
              "labelAngle": 0
          }
      },
      "y": {
            "field": "acq_time",
            "type": "ordinal",
            "title": "Time",
            "axis": {"format": ".2f"}
        },
      "color": {
          "field": "brightness",
          "aggregate": "max",
          "type": "quantitative",
          "legend": {
              "title": null
          },
          "scale":{
            "scheme":"oranges"
        } 
      }
  }
}

