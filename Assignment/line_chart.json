{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Avg Temperature and Wind Speed of Most Affected Towns",
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/ssar0011/FIT3179/main/line_graph/weather.csv"
  },
  "params": [
    {
      "name": "town_selection",
      "bind": {
        "input": "select",
        "options": [
          "Bairnsdale East",
          "Albury",
          "Port Macquarie",
          "Kalgoorlie",
          "Canberra",
          "Esperance",
          "Kangaroo Island"
          ],
        "labels": [
          "Bairnsdale East",
          "Albury",
          "Port Macquarie",
          "Kalgoorlie",
          "Canberra",
          "Esperance",
          "Kangaroo Island"
        ],
        "name": "Town: "
      }
    },
    {
      "name": "year_selection",
      "bind": {
        "input": "select",
        "options": [
          "2012",
          "2013",
          "2014",
          "2015"
          ],
        "labels": [
          "2012",
          "2013",
          "2014",
          "2015"
        ],
        "name": "Year: "
      }
    }
    ],
  "transform": [{
      "filter": "datum.Location == town_selection"
      },
  {"filter": "year(datum.Date) == year_selection"}],
  "encoding": {
    "x": {
      "timeUnit": "month",
      "title": "Month",
      "field": "Date",
      "axis": {"format": "%b", "title": null}
    }
  },
  "layer": [
    {
      "mark": {"opacity": 0.3, "type": "area", "color": "#ff7f00"},
      "encoding": {
        "y": {
          "aggregate": "average",
          "scale":{"domain":[0,30]},
          "field": "MaxTemp",
          "title": "Avg. Temperature (Â°C)",
          "axis": {"titleColor": "#ff7f00"}
        },

        "y2": {
          "aggregate": "average",
          "field": "MinTemp"
        }
      }
    },
    {
      "mark": {"opacity": 0.5,"stroke": "#d53e4f", "type": "line", "interpolate": "monotone"},
      "encoding": {
        "y": {
          "aggregate": "average",
          "scale":{"domain":[0,25]},
          "field": "WindSpeed",
          "title": "Wind Speed (km/h)",
          "axis": {"titleColor":"#d53e4f"}
        }
      }
    }
  ],
  "resolve": {"scale": {"y": "independent"}}
}
