{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "params": [{
      "name": "satellite_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Aqua",
          "Terra"
        ],
        "labels": [
          "Show All",
          "Aqua",
          "Terra"
        ],
        "name": "Select Satellite: "
      }
  }],
  "data": {
      "url": "https://raw.githubusercontent.com/ssar0011/FIT3179/main/heat_map/fire.csv"
  },
  "transform":[{
    "filter":"satellite_selection == null || datum.satellite == satellite_selection"
    }],
  "width":"container",
  "title": "Brightness of Fires by Day",
  "config": {
      "view": {
          "strokeWidth": 0,
          "step": 13
      },
      "axis": {
          "domain": false
      }
  },
  "mark": "rect",
  "encoding": {
      "x": {
          "field": "day",
          "type":"ordinal",
          "title": "Day",
          "sort": [],
          "axis": {
              "labelAngle": 0
          }
      },
      "y": {
            "field": "acq_date",
            "timeUnit": "yearmonth",
            "type": "nominal",
            "title": "Month"            },
      "color": {
          "field": "brightness",
          "aggregate": "max",
          "type": "quantitative",
          "legend": {
              "title": null,
              "orient":"bottom"
          },
          "scale":{
            "type": "log",
            "domain":[300,11000],
            "scheme":"oranges"
        } 
      },
      "tooltip": [
      {"field": "acq_date", "timeUnit": "yearmonth", "title": "Month"},
      {"field": "day", "title": "Day"},
      {
        "field": "brightness",
        "aggregate": "max",
        "title": "Brightness",
        "format": ".0f"
      }
    ]

  }
}



