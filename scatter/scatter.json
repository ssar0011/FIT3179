{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "COVID-19 Cases per Country (13 Oct 2020)",
  "data": {
    "url": "https://raw.githubusercontent.com/ssar0011/FIT3179/main/Proportional%20Map/data/fire_nrt_M6_101673.csv"
  },
  "params": [
    {
      "name": "acq_time",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 1,
        "max": 31,
        "step": 1,
        "name": "Time: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.scan > 0"},
    {"filter": "datum.track > 0"},
    {
      "calculate": "datum.Confirmed/datum.Population * 10000",
      "as": "Cases per 10,000 Population"
    }
  ],
  "encoding": {
    "x": {
      "aggregate": "sum",
      "field": "scan",
      "type": "quantitative",
      "title": "Scan",
      "axis": {"tickCount": 7}
    },
    "y": {
      "aggregate": "sum",
      "field": "track",
      "type": "quantitative",
      "title": "Track",
      "axis": {"tickCount": 7}
    }
  },
  "layer": [
    {
      "selection": {
        "satellite_highlight": {
          "type": "multi",
          "fields": ["satellite"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "aggregate": "sum",
          "field": "brightness",
          "title": "Brightness",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [100, 200, 1000000, 1500000, 2000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "satellite",
          "title": "Satellite",
          "type": "nominal",
          "scale": {
            "domain": [
              "Aqua",
              "Terra"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "satellite_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "brightness", "type": "quantitative", "format": ","},
          {"field": "scan", "type": "quantitative", "format": ","},
          {"field": "track", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['latitude'] == '-15.118' || datum['longitude'] == '141.702'" ,
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "brightness", "type": "quantitative", "format": ","},
          {"field": "scan", "type": "quantitative", "format": ","},
          {"field": "track", "type": "quantitative", "format": ","}
        ]
      }
    }
  ]
}
